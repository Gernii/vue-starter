{
  "name": "vue-starter",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check \"build-only {@}\" --",
    "preview": "vite preview",
    "test": "run-p \"test.*\"",
    "test.unit": "vitest run",
    "test.e2e": "playwright test",
    "build-only": "vite build",
    "type-check": "vue-tsc --build --force",
    "commit": "czg",
    "prepare": "husky",
    "setup-playwright": "playwright install --with-deps",
    "---------FMT FIX-----------": "Fmt check and fix vaid code",
		"fmt.fix": "run-s \"fmt.fix.*\"",
		"fmt.fix.prettier": "prettier --write \"src/**/*.vue\"",
		"fmt.fix.biome": "biome format --write ./src",
		"---------FMT CHECK-----------": "Fmt check vaid code only",
		"fmt.check": "run-s \"fmt.check.*\"",
		"fmt.check.biome": "biome format ./src",
		"---------LINT FIX-----------": "Lint check and fix vaid code",
		"lint.fix": "run-s \"lint.fix.*\"",
		"lint.fix.eslint": "eslint \"src/**/*.vue\" --fix",
		"lint.fix.biome": "biome check --write --unsafe ./src",
		"---------LINT CHECK-----------": "Lint check vaid code only",
		"lint.check": "run-s \"lint.check.*\"",
		"lint.check.eslint": "eslint  \"src/**/*.vue\"  --max-warnings=0",
		"lint.check.biome": "biome check ./src"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "pinia": "^2.2.6",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@playwright/test": "^1.48.2",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/typography": "^0.5.10",
    "@tsconfig/node20": "^20.1.4",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^20.17.6",
    "@vitejs/plugin-vue": "^5.1.4",
    "@vitejs/plugin-vue-jsx": "^4.0.1",
    "@vitest/eslint-plugin": "1.1.7",
    "@vue/eslint-config-prettier": "^10.1.0",
    "@vue/eslint-config-typescript": "^14.1.3",
    "@vue/test-utils": "^2.4.6",
    "@vue/tsconfig": "^0.5.1",
    "autoprefixer": "^10.4.20",
    "czg": "1.10.1",
    "eslint": "^9.14.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "eslint-plugin-vue": "^9.30.0",
    "husky": "^9.1.6",
    "jsdom": "^25.0.1",
    "lint-staged": "^15.2.10",
    "npm-run-all2": "^7.0.1",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.8",
    "tailwindcss": "^3.4.14",
    "typescript": "~5.6.3",
    "vite": "^5.4.10",
    "vite-plugin-vue-devtools": "^7.5.4",
    "vitest": "^2.1.4",
    "vue-tsc": "^2.1.10"
  },
  "engines": {
    "node": ">=20"
  },
  "packageManager": "npm@10.8.1",
  "lint-staged": {
    "*.vue": [
      "eslint --fix",
      "eslint --max-warnings=0",
      "prettier --write",
      "prettier --check"
    ],
    "*.ts": [
      "biome format --write --no-errors-on-unmatched",
      "biome check --write --unsafe --no-errors-on-unmatched"
    ]
  }
}
